@model Mhetrika.Web.ViewModels.NewLaboratoryViewModel

<h4>Cadastro de Laboratório</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        @using (Html.BeginForm("New", "Laboratory", FormMethod.Post))
        {
            @Html.AntiForgeryToken()

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">Nome:</label>
                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                <label class="control-label">CNPJ:</label>
                @Html.EditorFor(model => model.Cnpj, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Cnpj, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                <label class="control-label">E-mail:</label>
                @Html.EditorFor(m => m.Email, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                <label class="control-label">CEP:</label>
                @Html.EditorFor(m => m.AddressViewModel.Cep, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(m => m.AddressViewModel.Cep, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                <label class="control-label">UF:</label>
                @Html.EditorFor(m => m.AddressViewModel.Uf, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(m => m.AddressViewModel.Uf, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                <label class="control-label">Cidade:</label>
                @Html.EditorFor(m => m.AddressViewModel.City, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(m => m.AddressViewModel.City, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                <label class="control-label">Bairro:</label>
                @Html.EditorFor(m => m.AddressViewModel.Neighbourhood, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(m => m.AddressViewModel.Neighbourhood, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                <label class="control-label">Rua:</label>
                @Html.EditorFor(m => m.AddressViewModel.Street, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(m => m.AddressViewModel.Street, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                <label class="control-label">Número:</label>
                @Html.EditorFor(m => m.AddressViewModel.Number, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(m => m.AddressViewModel.Number, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-primary" />
            </div>
        }
    </div>
</div>

<div>
    <a asp-action="Index">Laboratórios</a>
</div>

@section Scripts {
    
}
